<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateProfil">

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_black"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:backgroundTint="#f7f7f7"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvMasuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Data Pribadi"
                android:fontFamily="@font/playfairdisplaybold"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Halaman ini digunakan untuk melakukan perubahan data pribadi"
                android:fontFamily="@font/playfairdisplaymedium"
                android:textSize="12dp"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/playfairdisplayregular"
                    android:text="NIK" />

                <EditText
                    android:id="@+id/editNik"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:hint="NIK..."
                    android:paddingLeft="10dp"
                    android:textColor="#f7f7f7"
                    android:textColorHint="#f7f7f7"
                    android:textSize="15dp"
                    android:enabled="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/playfairdisplayregular"
                    android:text="Nama" />

                <EditText
                    android:id="@+id/editNama"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:hint="Nama..."
                    android:paddingLeft="10dp"
                    android:textColor="#f7f7f7"
                    android:textColorHint="#f7f7f7"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/playfairdisplayregular"
                    android:text="Lahir" />

                <EditText
                    android:id="@+id/editLahir"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:hint="Lahir.."
                    android:paddingLeft="10dp"
                    android:textColor="#f7f7f7"
                    android:textColorHint="#f7f7f7"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/playfairdisplayregular"
                    android:text="Darah" />

                <Spinner
                    android:id="@+id/editDarah"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:hint="Darah..."
                    android:paddingLeft="10dp"
                    android:textColor="#f7f7f7"
                    android:textColorHint="#f7f7f7"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/playfairdisplayregular"
                    android:text="Alamat" />

                <EditText
                    android:id="@+id/editAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:hint="Alamat"
                    android:paddingLeft="10dp"
                    android:textColor="#f7f7f7"
                    android:textColorHint="#f7f7f7"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/playfairdisplayregular"
                    android:text="No HP/Whatsapp" />

                <EditText
                    android:id="@+id/editNo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:hint="No..."
                    android:paddingLeft="10dp"
                    android:textColor="#f7f7f7"
                    android:textColorHint="#f7f7f7"
                    android:textSize="15dp"
                    android:inputType="number"/>


                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#cd1624"
                    android:fontFamily="@font/playfairdisplaybold"
                    android:text="Update Data"
                    android:textSize="18dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>